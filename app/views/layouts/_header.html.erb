<header class="navbar navbar-fixed-top navbar-inverse">
  <%= stylesheet_link_tag    'header', media: 'all' %>
  <div class="container">

    <nav>
      <ul class="Logged_In_NavBar">
        <% if logged_in? %>
            <ul class="dropdown-menu">
              <li><%= link_to "Timeline", posts_url  %>
              <li><%= link_to "Profile", current_user %></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
        <% else %>
          <div class="Logged_Out_NavBar">
            <%= form_for(:session, url: login_path) do |f| %>

              <li><%= f.label :email %></li>
              <li><%= f.email_field :email, class: 'form-control' %></li>

              <li><%= f.label :password %></li>
              <li><%= f.password_field :password, class: 'form-control' %></li>

              <li><%= f.submit "Log in", class: "linkButton" %></li>
            <% end %>
        </div>

        <% end %>
      </ul>
    </nav>
  </div>
</header>
